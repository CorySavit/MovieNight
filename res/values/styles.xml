<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <color name="white">#DEDEDE</color>
    <color name="gold">#E9CE6B</color>
    <color name="black">#343434</color>
    <color name="green">#CADEAC</color>
    <color name="gray">#a6a6a6</color>
    <color name="lightgray">#D1D1D1</color>
    
    <style name="TextShadow">
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="MovieHeading" parent="TextShadow">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="MovieTitle" parent="MovieHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MovieSubtitle" parent="MovieHeading">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="Heading">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SubHeading">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="YellowButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:background">@color/gold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="LogoutButton">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="Label">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
